<h1 style="margin-left:175px;text-align:center;margin-bottom:35px;">Match information - Real Score</h1>


<div style="margin-left:175px;"id="matches-container">


    <div id="individual-match-card">
        <div id="match-team-info">
            <div style="width:33%;" id="home-team">
                <img class="flag" src="{{matchInfo.[0].home_flag}}">
                <h2>{{matchInfo.[0].home_team_en}} </h2>
                <h3>{{matchInfo.[0].home_score}}</h3>
                {{#if matchInfo.[0].home_scorers}}
                <h4>Scorers:</h4>
               <ul style="list-style:none;font-size:15px;">
               {{#each matchInfo.[0].home_scorers}}
               <li>{{this}}</li>
                {{/each}}
                </ul>
                {{/if}}
            </div>
            <p style="font-weight: bold;font-size:25px;">VS</p>
            <div style="width:33%;" id="away-team">
                <img class="flag" src="{{matchInfo.[0].away_flag}}">
                <h2>{{matchInfo.[0].away_team_en}} </h2>
                <h3>{{matchInfo.[0].away_score}}</h3>
                {{#if matchInfo.[0].away_scorers}}
                <h4>Scorers:</h4>
               <ul style="list-style:none;font-size:15px;">
               {{#each matchInfo.[0].away_scorers}}
               <li>{{this}}</li>
                {{/each}}
                </ul>
                {{/if}}

            </div>
        </div>
        <div id="match-details-info">
            <div style="margin-right:0px;" id="date-container">
                <p>{{matchInfo.[0].local_date}}</p>
            </div>
        </div>
        

    </div>
